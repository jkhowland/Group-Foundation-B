{
  "name": "react-browserify-spa-seed",
  "version": "0.0.1",
  "description": "Seed project for React, Browserify, Rework SPAs",
  "main": "index.js",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "start": "npm run build && serve .",
    "build": "npm run build-js && npm run build-css",
    "watch": "npm run watch-js & npm run watch-sass & serve",
    "test": "npm run lint -s && npm run build",
    "build-js": "browserify --extension=.jsx --extension=.js src/app.jsx | uglifyjs > build/build.js",
    "build-sass": "node-sass --include-path scss index.scss build/build.css",
    "watch-js": "watchify --extension=.jsx --extension=.js src/app.jsx -o build/build.js --debug --verbose",
    "watch-sass": "nodemon -e scss -x 'npm run build-sass'",
    "lint-eslint": "eslint .",
    "lint-jscs": "jscs .",
    "lint": "npm run lint-eslint && npm run lint-jscs"
  },
  "dependencies": {
    "autoprefixer": "^6.2.3",
    "babel-core": "^6.4.0",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-1": "^6.3.13",
    "bootstrap": "^3.3.0",
    "clean-css": "^3.1.9",
    "css-loader": "^0.23.1",
    "eslint": "^0.14.1",
    "file-loader": "^0.8.5",
    "firebase": "^2.3.2",
    "fireproof": "^3.1.0",
    "flux": "^2.0.1",
    "jwt-decode": "^1.1.0",
    "node-sass": "^3.4.2",
    "postcss-import": "^7.1.3",
    "postcss-loader": "^0.8.0",
    "postcss-url": "^5.0.2",
    "react": "^0.13",
    "react-mixin": "^1.1.0",
    "react-router": "^0.13.2",
    "reqwest": "^1.1.5",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.12.9",
    "webpack-dev-server": "^1.14.0",
    "when": "^3.7.2"
  }
}
