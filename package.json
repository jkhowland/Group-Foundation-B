{
  "name": "react-browserify-spa-seed",
  "version": "0.0.1",
  "description": "Seed project for React, Browserify, Rework SPAs",
  "main": "index.js",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "start": "npm run build && serve .",
    "build": "npm run build-js && npm run build-css",
    "watch": "npm run watch-js & npm run watch-sass & serve",
    "test": "npm run lint -s && npm run build",
    "build-js": "browserify --extension=.jsx --extension=.js src/app.jsx | uglifyjs > build/build.js",
    "build-sass": "node-sass --include-path scss index.scss build/build.css",
    "watch-js": "watchify --extension=.jsx --extension=.js src/app.jsx -o build/build.js --debug --verbose",
    "watch-sass": "nodemon -e scss -x 'npm run build-sass'",
    "lint-eslint": "eslint .",
    "lint-jscs": "jscs .",
    "lint": "npm run lint-eslint && npm run lint-jscs"
  },
  "dependencies": {
    "babelify": "^6.1.0",
    "bootstrap": "^3.3.0",
    "bootstrap-switch": "^3.3.2",
    "browser-sync": "^2.1.6",
    "browserify": "^8.0.3",
    "clean-css": "^3.1.9",
    "eslint": "^0.14.1",
    "firebase": "^2.3.2",
    "fireproof": "^3.1.0",
    "flux": "^2.0.1",
    "font-awesome": "^4.5.0",
    "jquery-uniform": "^1.7.5",
    "jwt-decode": "^1.1.0",
    "nodemon": "^1.5.0",
    "react": "^0.13",
    "react-mixin": "^1.1.0",
    "react-router": "^0.13.2",
    "reqwest": "^1.1.5",
    "rework": "^1.0.1",
    "rework-npm": "^1.0.0",
    "rework-npm-cli": "^0.1.1",
    "serve": "^1.4.0",
    "simple-line-icons": "^2.2.3",
    "uglify-js": "^2.4.15",
    "watchify": "^2.1.1",
    "webpack": "^1.12.9",
    "when": "^3.7.2"
  }
}
